{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vmName": {
      "type": "string"
    },
    "dscModulesUrl": {
      "type": "string"
    },
    "dscFunction": {
      "type": "string"
    },
    "domainName": {
      "type": "string"
    },
    "userAdminUsername": {
      "type": "string"
    },
    "userAdminPassword": {
      "type": "securestring"
    },
    "userSQLServiceUsername": {
      "type": "string"
    },
    "userSQLServicePassword": {
      "type": "securestring"
    },
    "userSPSetupUsername": {
      "type": "string"
    },
    "userSPSetupPassword": {
      "type": "securestring"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('vmName'),'/ConfigureSQLServer')]",
      "apiVersion": "2015-06-15",
      "location": "[resourceGroup().location]",
      "properties": {
        "publisher": "Microsoft.Powershell",
        "type": "DSC",
        "typeHandlerVersion": "2.20",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "ModulesUrl": "[parameters('dscModulesUrl')]",
          "wmfVersion": "5.1",
          "ConfigurationFunction": "[parameters('dscFunction')]",
          "Properties": {
            "DomainName": "[parameters('domainName')]",
            "AdminCreds": {
              "UserName": "[parameters('userAdminUsername')]",
              "Password": "PrivateSettingsRef:AdminPassword"
            },
            "SqlServerServiceAccountcreds": {
              "UserName": "[parameters('userSQLServiceUsername')]",
              "Password": "PrivateSettingsRef:SqlServerServiceAccountPassword"
            },
            "SharePointSetupUserAccountcreds": {
              "UserName": "[parameters('userSPSetupUsername')]",
              "Password": "PrivateSettingsRef:SharePointSetupUserAccountPassword"
            }
          }
        },
        "protectedSettings": {
          "Items": {
            "AdminPassword": "[parameters('userAdminPassword')]",
            "SqlServerServiceAccountPassword": "[parameters('userSQLServicePassword')]",
            "SharePointSetupUserAccountPassword": "[parameters('userSPSetupPassword')]"
          }
        }
      }
    }
  ],
  "outputs": {}
}
