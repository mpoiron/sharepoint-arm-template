{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vmName": {
      "type": "string"
    },
    "vmSize": {
      "type": "string"
    },
    "dscModulesUrl": {
      "type": "string"
    },
    "dscFunction": {
      "type": "string"
    },
    "domainName": {
      "type": "string"
    },
    "userAdminUsername": {
      "type": "string"
    },
    "userAdminPassword": {
      "type": "securestring"
    },
    "userSPFarmUsername": {
      "type": "string"
    },
    "userSPFarmPassword": {
      "type": "securestring"
    },
    "userSPSetupUsername": {
      "type": "string"
    },
    "userSPSetupPassword": {
      "type": "securestring"
    },
    "storageAccountName": {
      "type": "string"
    },
    "availabilitySetName": {
      "type": "string"
    },
    "nicName": {
      "type": "string"
    },
    "dnsServerAddress": {
      "type": "string"
    },
    "osVersion": {
      "type": "string",
      "allowedValues": [
        "2012-R2",
        "2016"
      ]
    },
    "osDiskStorageType": {
      "type": "string"
    },
    "dataDiskStorageType": {
      "type": "string"
    }
  },
  "resources": [
    {
      "apiVersion": "2017-03-30",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('vmName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "availabilitySet": {
          "id": "[resourceId('Microsoft.Compute/availabilitySets', parameters('availabilitySetName'))]"
        },
        "osProfile": {
          "computerName": "[parameters('vmName')]",
          "adminUsername": "[parameters('userAdminUsername')]",
          "adminPassword": "[parameters('userAdminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "[concat(parameters('osVersion'), '-Datacenter')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "[concat(parameters('vmName'), '-OsDisk')]",
            "managedDisk": {
              "storageAccountType": "[parameters('osDiskStorageType')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          },
          "dataDisks": [
            {
              "name": "[concat(parameters('vmName'),'-DataDisk1')]",
              "managedDisk": {
                "storageAccountType": "[parameters('dataDiskStorageType')]"
              },
              "createOption": "Empty",
              "caching": "None",
              "diskSizeGB": "120",
              "lun": 0
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',parameters('nicName'))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": "true",
            "storageUri": "[concat('https://', parameters('storageAccountName'), '.blob.core.windows.net')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('vmName'),'/ConfigureSPServer')]",
      "apiVersion": "2015-06-15",
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', parameters('vmName'))]"
      ],
      "location": "[resourceGroup().location]",
      "properties": {
        "publisher": "Microsoft.Powershell",
        "type": "DSC",
        "typeHandlerVersion": "2.2",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "ModulesUrl": "[parameters('dscModulesUrl')]",
          "wmfVersion": "5.1",
          "ConfigurationFunction": "[parameters('dscFunction')]",
          "Properties": {
            "DnsServer": "[parameters('dnsServerAddress')]",
            "DomainName": "[parameters('domainName')]",
            "AdminCreds": {
              "UserName": "[parameters('userAdminUsername')]",
              "Password": "PrivateSettingsRef:AdminPassword"
            },
            "SharePointSetupUserAccountCreds": {
              "UserName": "[parameters('userSPSetupUsername')]",
              "Password": "PrivateSettingsRef:SharePointSetupUserAccountPassword"
            },
            "SharePointFarmAccountCreds": {
              "UserName": "[parameters('userSPFarmUsername')]",
              "Password": "PrivateSettingsRef:SharePointFarmAccountPassword"
            }
          }
        },
        "protectedSettings": {
          "Items": {
            "AdminPassword": "[parameters('userAdminPassword')]",
            "SharePointSetupUserAccountPassword": "[parameters('userSPSetupPassword')]",
            "SharePointFarmAccountPassword": "[parameters('userSPFarmPassword')]"
          }
        }
      }
    }
  ],
  "outputs": {}
}
